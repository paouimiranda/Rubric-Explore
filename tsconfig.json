{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "services/friends-service.js"
  ]
}